<!-- res/drawable/button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bayangan -->
    <item android:right="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0BEC5" /> <!-- Warna bayangan -->
            <corners android:radius="24dp" /> <!-- Sudut bulat -->
        </shape>
    </item>
    <!-- Latar belakang tombol -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#EF5350"
                android:endColor="#D32F2F"
                android:angle="45"/>
            <corners android:radius="24dp" /> <!-- Sudut bulat -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
</layer-list>
